
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.Easy2Do">

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:00"
        android:fontFamily="sans-serif-black"
        android:textSize="48sp"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/timerBrief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get things done faster!\n\nIf a task takes 2 minutes or less, do it now!\n\nUse this timer to quickly tackle small tasks and avoid procrastination!"
        android:textSize="18sp"
        android:layout_marginHorizontal="15dp"
        android:layout_above="@+id/timerTextView"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/startTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:layout_below="@id/timerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
